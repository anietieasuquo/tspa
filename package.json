{
  "name": "tspa",
  "version": "1.0.4",
  "description": "TypeScript Persistence API",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "build": "dist/esm/index.d.ts",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "directories": {
    "test": "src/tests"
  },
  "scripts": {
    "build": "rm -rf dist && prettier --write src/main && yarn run build:esm && yarn run build:cjs",
    "build:ci": "rm -rf dist && yarn run build:esm && yarn run build:cjs",
    "build:esm": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json --outDir dist/esm",
    "build:cjs": "tsc -p tsconfig-cjs.json && tsc-alias -p tsconfig-cjs.json --outDir dist/cjs",
    "clean:install": "rm -rf node_modules && yarn install",
    "clean:install:ci": "rm -rf node_modules && yarn install --frozen-lockfile",
    "clean:build": "yarn run clean:install && yarn run build",
    "release": "npm publish --access public",
    "prepublishOnly": "yarn build",
    "prepare": "ts-patch install -s",
    "test:unit": "TSPA_LOG_LEVEL=trace TSPA_ENVIRONMENT=dev jest unit",
    "test:integration": "export $(cat .env | xargs) && jest integration --testTimeout=100000000",
    "test:integration:ci": "TSPA_LOG_LEVEL=trace TSPA_ENVIRONMENT=dev DEBUG=testcontainers:containers jest integration --testTimeout=100000000",
    "test:integration:firestore": "export $(cat .env | xargs) && jest -t \"FirestoreCrudRepository Integration Tests\"  --testTimeout=100000000 --detectOpenHandles",
    "test:smoke": "TSPA_LOG_LEVEL=trace TSPA_ENVIRONMENT=dev DEBUG=testcontainers:containers jest smoke  --testTimeout=100000000",
    "test": "TSPA_LOG_LEVEL=trace DEBUG=testcontainers:containers TSPA_ENVIRONMENT=dev jest --testTimeout=100000000 --coverage",
    "lint:eslint:ci": "yarn run eslint src/main --max-warnings=0 --ext .ts --ext .js",
    "lint:prettier:ci": "yarn run prettier --check src/main",
    "lint:prettier:ci:fix": "prettier --write src/main",
    "lint:ci": "yarn run lint:eslint:ci && yarn run lint:prettier:ci",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anietieasuquo/tspa.git"
  },
  "keywords": [
    "TSPA",
    "TypeScript",
    "NodeJS",
    "React",
    "Firebase",
    "Firestore",
    "MongoDB",
    "PostgreSQL",
    "MariaDB",
    "localStorage",
    "database"
  ],
  "author": "Anietie Asuquo <hello@anietieasuquo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anietieasuquo/tspa/issues"
  },
  "homepage": "https://github.com/anietieasuquo/tspa#readme",
  "devDependencies": {
    "@testcontainers/gcloud": "10.8.0",
    "@types/callsite": "1.0.34",
    "@types/firebase": "3.2.1",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.14.202",
    "@types/mongoose": "5.11.97",
    "@types/node": "20.11.16",
    "@types/node-localstorage": "1.3.3",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.6.3",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "lint-staged": "^15.2.2",
    "patch-package": "8.0.0",
    "prettier": "3.2.5",
    "testcontainers": "10.8.0",
    "ts-jest": "29.1.2",
    "ts-patch": "3.1.2",
    "tsc-alias": "1.8.8",
    "typescript": "5.1.6",
    "typescript-transform-paths": "3.4.6"
  },
  "dependencies": {
    "callsite": "1.0.0",
    "firebase": "10.8.0",
    "mongoose": "8.1.1",
    "node-localstorage": "3.0.5",
    "postinstall-postinstall": "2.1.0"
  }
}
